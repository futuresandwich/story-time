<% provide(:title, "Edit story") %> 
<h1>Update Story</h1>

<div class="row">
  <div class="span8 offset2">
    <%= form_for(@story) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= render "fields", f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
    <div class="well">
    <h3>Pages</h3>
    <ul class="thumbnails">
      <%= render @story.pages %>
    </ul>
    <%= button_to "Add page", new_story_page_path(@story), method: :get, class: "btn btn-medium btn-info" %>
  </div>
  </div>
  
</div>


