<% provide(:title, @story.title) %>
<section>
  <h1><%= @story.title %></h1>
</section>
    
<div class="row">
  <div class="span6 offset3">
    <section style="text-align:center; margin-bottom:20px">
    <%= image_for @story, 600 %>
    </section>
    <p>
      <%= raw htmlify(@story.description) %>
    </p>  
 
  <div style="text-align:center">
  <% if !@story.first_page.nil? %>
        <%= link_to "Begin story", story_page_path(@story,@story.first_page), class:"btn btn-large btn-primary" %>
  <% else %>
        No pages yet!
  <% end %>
  </div>
   </div>
</div>