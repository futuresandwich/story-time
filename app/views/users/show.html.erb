<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= avatar_for(@user, 100) %><br/>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <% if (current_user == @user) %>
        <%= render partial: "/microposts/form", locals: { micropost: @user.microposts.build } %>
      <% end %>
    </section>
  </aside>
  <div class="span9">
    <% if @user.microposts.any? %>
      <h3>Activity (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>